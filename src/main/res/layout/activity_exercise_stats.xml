<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseStatsActivity">

    <TextView
        android:id="@+id/tvMostPopularExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Popular Exercise"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvTotalTimeSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Time Spent on Exercises"
        android:textSize="18sp"
        android:layout_below="@id/tvMostPopularExercise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartEx"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/tvTotalTimeSpent"
        android:layout_marginTop="20dp" />

</RelativeLayout>
